<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="640.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FlightController">
   <children>
      <!-- Background Color -->
      <AnchorPane style="-fx-background-color: #f4f4f9;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            
            <!-- Title Section -->
            <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-family: 'Arial Bold'; -fx-text-fill: #2c3e50;" text="Flight Management" />
            
            <!-- Table Section -->
            <TableView fx:id="TABLE" layoutX="20.0" layoutY="70.0" prefHeight="440.0" prefWidth="920.0" style="-fx-border-color: #2c3e50; -fx-border-width: 1px; -fx-background-color: white; -fx-padding: 5;">
               <columns>
                  <TableColumn fx:id="ID" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="NOM" prefWidth="100.0" text="NOM" />
                  <TableColumn fx:id="SOURCE" prefWidth="100.0" text="SOURCE" />
                  <TableColumn fx:id="DESTINATION" prefWidth="120.0" text="DESTINATION" />
                  <TableColumn fx:id="DATE" prefWidth="100.0" text="DATE" />
                  <TableColumn fx:id="ECOSEAT" prefWidth="100.0" text="ECOSEAT" />
                  <TableColumn fx:id="CLASSSEAT" prefWidth="100.0" text="CLASSSEAT" />
                  <TableColumn fx:id="BUISSNESSCLASS" prefWidth="120.0" text="BUISSNESSCLASS" />
                  <TableColumn fx:id="STATE" prefWidth="120.0" text="STATE" />
               </columns>
            </TableView>

            <!-- Search Section -->
            <TextField fx:id="labelsearch" layoutX="20.0" layoutY="530.0" prefHeight="30.0" prefWidth="300.0" promptText="Search by ID or Name" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #2980b9; -fx-font-size: 14px;" />
            <Button fx:id="Buttonsearch" layoutX="330.0" layoutY="530.0" onAction="#search" prefWidth="100.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Search" />

            <!-- Action Buttons -->
            <Button fx:id="idadd" layoutX="648.0" layoutY="531.0" onAction="#ADD" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Add" />
            
            <Button fx:id="iddelete" layoutX="740.0" layoutY="530.0" onAction="#delete" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Delete" />
            
            <!-- Back Button -->
            <Button fx:id="idback" layoutX="850.0" layoutY="530.0" onAction="#back" prefWidth="80.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Back" />

         </children>
      </AnchorPane>
   </children>
</AnchorPane>
