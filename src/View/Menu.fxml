<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MenuController">
   <children>
      <!-- Fullscreen Background Image -->
      <ImageView fitHeight="600.0" fitWidth="800.0" preserveRatio="false">
         <image>
            <Image url="@Capture d'écran 2024-11-30 120217.png" />
         </image>
      </ImageView>

      <!-- Semi-transparent Sidebar for Navigation -->
      <Pane layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="220.0" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 2);">
         <children>
            <Label layoutX="20.0" layoutY="20.0" text="MENU" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-family: 'Arial Bold';" />
            
            <!-- Navigation Buttons -->
            <Button fx:id="idflight" layoutX="20.0" layoutY="80.0" mnemonicParsing="false" onAction="#FlightButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2874A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               FLIGHT
            </Button>
            <Button fx:id="idbooking" layoutX="20.0" layoutY="140.0" mnemonicParsing="false" onAction="#BookingButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2874A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               BOOKING
            </Button>
            <Button fx:id="idcustomers" layoutX="20.0" layoutY="200.0" mnemonicParsing="false" onAction="#CustomerButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2874A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               CUSTOMERS
            </Button>
            <Button fx:id="idplane" layoutX="20.0" layoutY="260.0" mnemonicParsing="false" onAction="#PlaneButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2874A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               PLANE
            </Button>
            <Button fx:id="idschedule" layoutX="20.0" layoutY="320.0" mnemonicParsing="false" onAction="#ScheduleButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #2874A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               SCHEDULE
            </Button>
            <Button fx:id="idexit" layoutX="20.0" layoutY="520.0" mnemonicParsing="false" onAction="#ExitButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #B03A2E; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;">
               EXIT
            </Button>
         </children>
      </Pane>

      <!-- Header Label -->
      <Label layoutX="250.0" layoutY="30.0" prefHeight="50.0" prefWidth="500.0" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-family: 'Arial Bold Italic'; -fx-effect: dropshadow(gaussian, black, 5, 0.7, 0, 1);" text="FLY HIGH, WITH CONFIDENCE" />

      <!-- Optional Footer (if needed) -->
      <Label layoutX="250.0" layoutY="550.0" text="© 2024 Airline Management" style="-fx-text-fill: white; -fx-font-size: 12px;" />
   </children>
</AnchorPane>
