<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BookingAddController" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #d4e4ff);">
   <children>
      <!-- Header Section -->
      <VBox alignment="CENTER" spacing="15.0" layoutX="20.0" layoutY="20.0" prefWidth="480.0">
         <HBox alignment="CENTER" spacing="15.0">
            <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
               <image>
                  <Image url="@appointment.png" />
               </image>
            </ImageView>
            <Label text="Booking Form" style="-fx-font-size: 32px; -fx-font-family: 'Arial'; -fx-text-fill: #00509e; -fx-font-weight: bold;" />
         </HBox>
         <Separator prefWidth="480.0" style="-fx-background-color: #00509e;" />
      </VBox>

      <!-- Form Section -->
      <VBox alignment="TOP_CENTER" spacing="20.0" layoutX="40.0" layoutY="100.0" prefWidth="440.0">
         <GridPane hgap="20.0" vgap="15.0" alignment="CENTER" prefWidth="440.0">
            <columnConstraints>
               <ColumnConstraints halignment="RIGHT" prefWidth="120.0" />
               <ColumnConstraints halignment="LEFT" prefWidth="250.0" />
            </columnConstraints>

            <!-- ID -->
            <Label text="ID:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="idcustomer" promptText="Enter ID" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Name -->
            <Label text="Name:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="nomcustomer" promptText="Enter Name" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Email -->
            <Label text="Email:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="emailcustomer" promptText="Enter Email" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Phone -->
            <Label text="Phone:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="telephonecustomer" promptText="Enter Phone" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Birthday -->
            <Label text="Birthday:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="birthdaycustomer" promptText="YYYY-MM-DD" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- CIN -->
            <Label text="CIN:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextField fx:id="cincustomer" promptText="Enter CIN" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Address -->
            <Label text="Address:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <TextField fx:id="addresscustomer" promptText="Enter Address" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Passport -->
            <Label text="Passport No.:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <TextField fx:id="passportcustomer" promptText="Enter Passport Number" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Seat Type -->
            <Label text="Seat Type:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="8" GridPane.columnIndex="0" />
            <TextField fx:id="seat" promptText="Economy, Business, First Class" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />

            <!-- Price -->
            <Label text="Price:" style="-fx-font-size: 14px; -fx-text-fill: #00509e;" GridPane.rowIndex="9" GridPane.columnIndex="0" />
            <TextField fx:id="price" promptText="Enter Price" GridPane.rowIndex="9" GridPane.columnIndex="1" style="-fx-border-color: #00509e; -fx-border-radius: 5; -fx-padding: 5;" />
         </GridPane>
      </VBox>

      <!-- Footer Section -->
      <HBox alignment="CENTER" spacing="30.0" layoutX="100.0" layoutY="650.0" prefWidth="300.0">
         <Button fx:id="idadd" text="Add" onAction="#add" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5; -fx-padding: 10 20;" />
         <ImageView fx:id="IDBACK" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#back">
            <image>
               <Image url="@left-chevron.png" />
            </image>
         </ImageView>
      </HBox>
   </children>
</AnchorPane>
